<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.gyh.forestry.mapper.UserNotificationMapper">
    <resultMap id="BaseResultMap" type="org.gyh.forestry.domain.UserNotification">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="notification_id" jdbcType="INTEGER" property="notificationId"/>
        <result column="is_read" jdbcType="BOOLEAN" property="isRead"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, user_id, notification_id, is_read
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultType="org.gyh.forestry.domain.UserNotification">
        select
        <include refid="Base_Column_List"/>
        from user_notifications
        where id = #{id,jdbcType=INTEGER}
    </select>
    <insert id="insertUserNotification" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_notifications (user_id, notification_id)
        VALUES (#{userId}, #{notificationId})
    </insert>
    <select id="getUnreadNotifications" resultType="org.gyh.forestry.dto.resp.UserNotificationResp">
        SELECT un.*, n.title, n.content
        FROM user_notifications un
        left join notifications n on n.id = un.notification_id
        WHERE un.user_id = #{userId}
          AND un.is_read = FALSE
    </select>
    <select id="getUnreadNotificationCount" resultType="int">
        SELECT COUNT(*)
        FROM user_notifications
        WHERE user_id = #{userId}
          AND is_read = FALSE
    </select>
    <update id="markAsRead">
        UPDATE user_notifications
        SET is_read = TRUE
        WHERE id = #{id}
    </update>
</mapper>