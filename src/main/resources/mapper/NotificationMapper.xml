<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.gyh.forestry.mapper.NotificationMapper">
    <insert id="insertNotification" parameterType="org.gyh.forestry.domain.Notification" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO notifications (title, content)
        VALUES (#{title}, #{content})
    </insert>
    <select id="getAllNotifications" resultType="org.gyh.forestry.domain.Notification">
        SELECT *
        FROM notifications
    </select>
</mapper>